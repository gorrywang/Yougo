<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/item_kd_line"
        android:layout_width="32dp"
        android:layout_height="match_parent">

        <View
            android:id="@+id/item_kd_lint_top"
            android:background="@color/tip_font"
            android:layout_centerHorizontal="true"
            android:layout_width="0.5dp"
            android:layout_height="12dp"/>

        <View
            android:id="@+id/item_kd_dian"
            android:layout_below="@+id/item_kd_lint_top"
            android:background="@drawable/yuandian_not"
            android:layout_centerHorizontal="true"
            android:layout_width="5dp"
            android:layout_height="5dp"/>
        <View
            android:id="@+id/item_kd_bottom"
            android:layout_below="@+id/item_kd_dian"
            android:background="@color/tip_font"
            android:layout_centerHorizontal="true"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"/>

    </RelativeLayout>
    
    <RelativeLayout
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:paddingRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="深证已经松松哒嗲暖123456"
            android:id="@+id/item_kd_txt_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="5dp"
            android:layout_below="@+id/item_kd_txt_data"
            android:text="2017.08.08 18:11"
            android:id="@+id/item_kd_txt_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</LinearLayout>