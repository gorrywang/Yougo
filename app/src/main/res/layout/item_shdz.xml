<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/item_shdz_txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="李卓杰"
            android:textColor="@color/important_title"
            android:textSize="@dimen/wz_18" />

        <TextView
            android:id="@+id/item_shdz_txt_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="159*****359"
            android:textColor="@color/important_title"
            android:textSize="@dimen/wz_18" />

        <TextView
            android:id="@+id/item_shdz_txt_ads"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_shdz_txt_name"
            android:layout_marginTop="8dp"
            android:text="[家庭]广东省深圳市宝安区"
            android:textColor="@color/tip_font"
            android:textSize="@dimen/wz_18" />

        <TextView
            android:id="@+id/item_shdz_txt_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_shdz_txt_ads"
            android:layout_marginTop="8dp"
            android:text="周一到周五收货"
            android:textColor="@color/tip_font"
            android:textSize="@dimen/wz_18" />

        <View
            android:id="@+id/item_shdz_view_1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/item_shdz_txt_time"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="#f5f1ff" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_shdz_view_1"
            android:gravity="center_vertical"
            android:paddingTop="4dp"
            android:layout_marginBottom="4dp"
            android:orientation="horizontal">

            <ToggleButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:textOn=""
                android:textOff=""
                android:background="@drawable/selector_success" />


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="默认地址"
                android:textColor="@color/important_title"
                android:textSize="@dimen/wz_16" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/editor_white" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="编辑"
                android:textColor="@color/sec_title"
                android:textSize="@dimen/wz_16" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/error" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="删除"
                android:textColor="@color/sec_title"
                android:textSize="@dimen/wz_16" />
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>